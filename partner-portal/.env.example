# B2B Partner Portal Environment Configuration
# Copy this file to .env and fill in the values.

# ============================================
# REQUIRED VARIABLES
# These must be set for the application to start.
# ============================================

# Backend API base URL (must be a valid URL)
VITE_B2B_API_BASE_URL=https://api.example.com

# Documentation URL (must be a valid URL)
VITE_B2B_DOCS_URL=https://docs.example.com/partners

# Request timeout in milliseconds (must be a positive integer)
VITE_B2B_REQUEST_TIMEOUT_MS=30000

# Default language for the portal (he, en, or es)
# he = Hebrew (RTL), en = English, es = Spanish
VITE_B2B_DEFAULT_LANGUAGE=he

# ============================================
# OPTIONAL FEATURE FLAGS
# Set to "false" to disable. Enabled by default.
# ============================================

# Enable API Playground for testing endpoints
VITE_B2B_FEATURE_ENABLE_PLAYGROUND=true

# Enable billing/subscription management
VITE_B2B_FEATURE_ENABLE_BILLING=true

# Enable team member management
VITE_B2B_FEATURE_ENABLE_TEAM=true

# Enable webhook configuration
VITE_B2B_FEATURE_ENABLE_WEBHOOKS=true
