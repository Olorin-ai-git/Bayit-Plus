LIBRARIAN_BUDGET_STEP_USD=0.1

# Librarian Pagination
LIBRARIAN_REPORTS_LIMIT=10
LIBRARIAN_ACTIONS_LIMIT=50
LIBRARIAN_ACTIVITY_PAGE_SIZE=10

# Librarian UI
LIBRARIAN_ID_TRUNCATE_LENGTH=8
