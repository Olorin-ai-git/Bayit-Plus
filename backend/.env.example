COMMUNITY_DEFAULT_REGION=nyc
US_JEWISH_REGIONS=nyc,la,chicago,miami,boston,philadelphia,atlanta,dallas,denver,seattle
COMMUNITY_SCRAPE_INTERVAL_HOURS=168

