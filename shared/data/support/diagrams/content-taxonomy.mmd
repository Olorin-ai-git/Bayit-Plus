    classDef sectionStyle fill:#50C878,stroke:#2E7D4E,color:#fff
    classDef subcategoryStyle fill:#F39C12,stroke:#B8730A,color:#fff
    classDef genreStyle fill:#9B59B6,stroke:#6C3483,color:#fff
    classDef audienceStyle fill:#E74C3C,stroke:#A93226,color:#fff
    classDef maturityStyle fill:#3498DB,stroke:#2471A3,color:#fff

    class S1,S2,S3,S4,S5,S6 sectionStyle
    class SC1,SC2,SC3,SC4,SC5,SC6,SC7 subcategoryStyle
