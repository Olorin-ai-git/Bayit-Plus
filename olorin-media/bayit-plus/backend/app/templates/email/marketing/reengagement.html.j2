{% extends "categories/marketing.html.j2" %}
{% from "components/button.html.j2" import button %}

{% block headline_text %}
{{ t('email.reengagement.headline', default='We Miss You!', lang=lang) }}
{% endblock %}

{% block marketing_body %}
<p style="color: rgba(255, 255, 255, 0.9); font-size: 18px; line-height: 1.6; margin: 0 0 24px 0;">
  {{ t('email.reengagement.intro', default='It\'s been {days_inactive} days since your last visit. Here\'s what you\'ve been missing:', lang=lang, days_inactive=days_inactive) }}
</p>

{% if featured_content %}
<h3 style="color: #60a5fa; font-size: 20px; font-weight: 600; margin: 32px 0 16px 0;">
  {{ t('email.reengagement.featured_title', default='Featured for You', lang=lang) }}
</h3>

<div style="display: grid; gap: 16px;">
  {% for content in featured_content %}
  <div style="padding: 16px; background: rgba(255, 255, 255, 0.05); border-radius: 12px; border: 1px solid rgba(255, 255, 255, 0.1);">
    {% if content.image_url %}
    <div style="margin: 0 0 12px 0; border-radius: 8px; overflow: hidden;">
      <img src="{{ content.image_url }}" alt="{{ content.title }}" style="width: 100%; height: auto; display: block;" />
    </div>
    {% endif %}

    <h4 style="color: #ffffff; font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">
      {{ content.title }}
    </h4>

    {% if content.description %}
    <p style="color: rgba(255, 255, 255, 0.8); font-size: 14px; line-height: 1.6; margin: 0 0 12px 0;">
      {{ content.description }}
    </p>
    {% endif %}

    {% if content.url %}
    <a href="{{ content.url }}" style="color: #60a5fa; font-size: 14px; text-decoration: none; font-weight: 600;">
      {{ t('email.reengagement.explore', default='Explore â†’', lang=lang) }}
    </a>
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endif %}

<div style="margin: 32px 0; padding: 24px; background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(96, 165, 250, 0.15)); border-radius: 12px; text-align: center;">
  <p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0;">
    {{ t('email.reengagement.benefit_text', default='Plus hundreds more premium features waiting for you', lang=lang) }}
  </p>
</div>
{% endblock %}

{% block marketing_cta %}
<div style="margin: 40px 0; text-align: center;">
  {{ button(
    text=t('email.reengagement.return_cta', default='Welcome Back to Bayit+', lang=lang),
    url=return_url,
    primary=true
  ) }}
</div>

<p style="color: rgba(255, 255, 255, 0.5); font-size: 13px; text-align: center; margin: 16px 0 0 0;">
  {{ t('email.reengagement.opt_out', default='Not interested? You can', lang=lang) }}
  <a href="{{ unsubscribe_url }}" style="color: rgba(255, 255, 255, 0.6); text-decoration: underline;">
    {{ t('email.reengagement.opt_out_link', default='opt out of these emails', lang=lang) }}
  </a>
</p>
{% endblock %}
