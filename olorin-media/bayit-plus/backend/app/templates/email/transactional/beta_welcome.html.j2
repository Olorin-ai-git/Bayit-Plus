{% extends "categories/transactional.html.j2" %}
{% from "components/button.html.j2" import button %}

{% block body_content %}
<p style="color: rgba(255, 255, 255, 0.9); font-size: 18px; line-height: 1.6; margin: 0 0 16px 0; font-weight: 600;">
  {{ t('email.beta_welcome.intro', default='Welcome to Bayit+ Beta 500!', lang=lang) }}
</p>

<p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0 0 24px 0;">
  {{ t('email.beta_welcome.description', default='Your account is ready with {beta_credits} AI credits. Let\'s get started!', lang=lang, beta_credits=beta_credits) }}
</p>

<div style="margin: 24px 0; padding: 20px; background: rgba(34, 197, 94, 0.1); border-radius: 12px; border: 1px solid rgba(34, 197, 94, 0.3);">
  <h3 style="color: #22c55e; font-size: 18px; font-weight: 600; margin: 0 0 12px 0;">
    {{ t('email.beta_welcome.getting_started', default='Getting Started', lang=lang) }}
  </h3>
  <ol style="color: rgba(255, 255, 255, 0.9); font-size: 15px; line-height: 1.8; margin: 0; padding-left: 20px;">
    <li>{{ t('email.beta_welcome.step1', default='Complete your profile', lang=lang) }}</li>
    <li>{{ t('email.beta_welcome.step2', default='Explore AI-powered features', lang=lang) }}</li>
    <li>{{ t('email.beta_welcome.step3', default='Share feedback to help us improve', lang=lang) }}</li>
  </ol>
</div>

<p style="color: rgba(255, 255, 255, 0.7); font-size: 14px; margin: 16px 0 0 0;">
  {{ t('email.beta_welcome.duration', default='Your beta access is valid for {beta_duration_days} days.', lang=lang, beta_duration_days=beta_duration_days) }}
</p>
{% endblock %}

{% block cta_section %}
<div style="margin: 32px 0;">
  {{ button(
    text=t('email.beta_welcome.cta', default='Launch Dashboard', lang=lang),
    url=dashboard_url,
    primary=true
  ) }}
</div>
{% endblock %}
