{% extends "categories/transactional.html.j2" %}
{% from "components/button.html.j2" import button %}

{% block body_content %}
<p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0 0 16px 0;">
  {{ t('email.password_changed.intro', default='Your Bayit+ password was successfully changed.', lang=lang) }}
</p>

{% if change_time %}
<p style="color: rgba(255, 255, 255, 0.7); font-size: 14px; margin: 0 0 8px 0;">
  <strong>{{ t('email.password_changed.time', default='When', lang=lang) }}:</strong> {{ change_time }}
</p>
{% endif %}

{% if ip_address %}
<p style="color: rgba(255, 255, 255, 0.7); font-size: 14px; margin: 0 0 24px 0;">
  <strong>{{ t('email.password_changed.ip', default='IP Address', lang=lang) }}:</strong> {{ ip_address }}
</p>
{% endif %}

<div style="margin: 24px 0; padding: 16px; background: rgba(251, 146, 60, 0.1); border-left: 3px solid #fb923c; border-radius: 8px;">
  <p style="color: #fb923c; font-size: 14px; margin: 0;">
    {{ t('email.password_changed.not_you', default='If you didn\'t make this change, please contact support immediately.', lang=lang) }}
  </p>
</div>
{% endblock %}

{% block cta_section %}
<div style="margin: 32px 0;">
  {{ button(
    text=t('email.password_changed.contact_support', default='Contact Support', lang=lang),
    url=support_url,
    primary=false
  ) }}
</div>
{% endblock %}
