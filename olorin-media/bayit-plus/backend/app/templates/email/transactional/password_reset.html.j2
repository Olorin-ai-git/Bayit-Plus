{% extends "categories/transactional.html.j2" %}
{% from "components/button.html.j2" import button %}

{% block body_content %}
<p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0 0 16px 0;">
  {{ t('email.password_reset.intro', default='We received a request to reset your Bayit+ password.', lang=lang) }}
</p>

<p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0 0 24px 0;">
  {{ t('email.password_reset.description', default='Click the button below to reset your password. This link expires in {expiry_hours} hours.', lang=lang, expiry_hours=expiry_hours) }}
</p>
{% endblock %}

{% block cta_section %}
<div style="margin: 32px 0;">
  {{ button(
    text=t('email.password_reset.cta', default='Reset Password', lang=lang),
    url=reset_url,
    primary=true
  ) }}
</div>

<div style="margin: 24px 0; padding: 16px; background: rgba(251, 146, 60, 0.1); border-left: 3px solid #fb923c; border-radius: 8px;">
  <p style="color: #fb923c; font-size: 14px; margin: 0;">
    <strong>{{ t('email.password_reset.security_warning', default='Security Notice', lang=lang) }}:</strong>
    {{ t('email.password_reset.security_text', default='If you didn\'t request this password reset, please secure your account immediately by changing your password and enabling two-factor authentication.', lang=lang) }}
  </p>
</div>
{% endblock %}
