{% extends "categories/payment.html.j2" %}
{% from "components/button.html.j2" import button %}

{% block body_content %}
<p style="color: rgba(255, 255, 255, 0.9); font-size: 16px; line-height: 1.6; margin: 0 0 24px 0;">
  {{ t('email.subscription_activated.intro', default='Your {plan_name} subscription is now active!', lang=lang, plan_name=plan_name) }}
</p>

<div style="margin: 24px 0; padding: 20px; background: rgba(34, 197, 94, 0.1); border-radius: 12px; border: 1px solid rgba(34, 197, 94, 0.3);">
  <h3 style="color: #22c55e; font-size: 18px; font-weight: 600; margin: 0 0 12px 0;">
    {{ t('email.subscription_activated.features_title', default='Your Plan Features', lang=lang) }}
  </h3>
  <ul style="color: rgba(255, 255, 255, 0.9); font-size: 15px; line-height: 1.8; margin: 0; padding-left: 20px;">
    {% for feature in features %}
    <li>{{ feature }}</li>
    {% endfor %}
  </ul>
</div>

{% if expires_at %}
<p style="color: rgba(255, 255, 255, 0.7); font-size: 14px; margin: 16px 0 0 0;">
  {{ t('email.subscription_activated.expires', default='Your subscription expires on {expires_at}', lang=lang, expires_at=expires_at) }}
</p>
{% endif %}
{% endblock %}

{% block payment_cta %}
<div style="margin: 32px 0;">
  {{ button(
    text=t('email.subscription_activated.cta', default='Explore Your Features', lang=lang),
    url=header_url,
    primary=true
  ) }}
</div>
{% endblock %}
