{
  "name": "olorin-ecosystem",
  "version": "1.0.0",
  "private": true,
  "description": "Olorin.ai Ecosystem - Unified monorepo for all Olorin platforms",
  "workspaces": [
    "packages/*",
    "packages/ui/*",
    "web",
    "tv-app",
    "mobile-app",
    "tvos-app",
    "partner-portal"
  ],
  "scripts": {
    "olorin": "./scripts/olorin.sh",
    "olorin:status": "./scripts/olorin.sh status",
    "olorin:health": "./scripts/olorin.sh health",
    "olorin:help": "./scripts/olorin.sh --help",
    "olorin:agent": "./scripts/olorin.sh agent",
    "olorin:skill": "./scripts/olorin.sh skill",
    "olorin:start": "./scripts/olorin.sh start",
    "olorin:stop": "./scripts/olorin.sh stop",
    "olorin:start:backend": "./scripts/olorin.sh start bayit backend",
    "olorin:start:web": "./scripts/olorin.sh start bayit web",
    "olorin:start:all": "./scripts/olorin.sh start bayit",
    "olorin:cli:install": "cd cli && npm install --legacy-peer-deps",
    "olorin:cli:build": "cd cli && npm run build",
    "olorin:cli:dev": "cd cli && npm run dev",
    "build": "turbo run build",
    "build:all": "turbo run build",
    "build:web": "turbo run build --filter=bayit-plus-web",
    "build:mobile": "turbo run build --filter=BayitPlusMobile",
    "build:tv": "turbo run build --filter=BayitPlusTV",
    "build:tvos": "turbo run build --filter=BayitPlusTVOS",
    "build:partner": "turbo run build --filter=bayit-plus-partner-portal",
    "build:packages": "turbo run build --filter='./packages/**'",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=bayit-plus-web",
    "dev:mobile": "turbo run dev --filter=BayitPlusMobile",
    "dev:partner": "turbo run dev --filter=bayit-plus-partner-portal",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "deploy": "turbo run deploy",
    "deploy:web": "turbo run deploy --filter=bayit-plus-web",
    "deploy:partner": "turbo run deploy --filter=bayit-plus-partner-portal",
    "deploy:preview": "turbo run build && firebase hosting:channel:deploy preview",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init hosting",
    "tvos": "cd apps/bayit-tv-apple && npm run tvos",
    "tvos:start": "cd apps/bayit-tv-apple && npm run start",
    "android-tv": "cd apps/bayit-tv-android && npm run android",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "version:check": "syncpack list-mismatches",
    "version:fix": "syncpack fix-mismatches",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "turbo run build --filter='./packages/**' && changeset publish",
    "prepare": "echo 'Husky disabled - configure later if needed' || true",
    "legacy:build:all": "npm run build:web && npm run build:tv",
    "legacy:build:web": "cd web && npm run build",
    "legacy:build:tv": "cd tv-app && npm run build:web",
    "legacy:deploy": "npm run legacy:build:all && firebase deploy --only hosting",
    "legacy:deploy:web": "cd web && npm run deploy",
    "legacy:deploy:tv": "cd tv-app && npm run deploy",
    "legacy:install:tvos": "cd tvos-app && npm install && cd tvos && pod install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.57.0",
    "@types/react": "^19.2.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.0.0",
    "husky": "^9.0.0",
    "i18next": "^25.8.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "react-i18next": "^16.5.3",
    "syncpack": "^12.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.7.0",
    "zustand": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@picovoice/porcupine-web": "^4.0.0",
    "@picovoice/web-voice-processor": "^4.0.9",
    "@simplewebauthn/browser": "^13.2.2",
    "clsx": "^2.1.1",
    "i18next-http-backend": "^3.0.2",
    "isomorphic-dompurify": "^2.35.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-svg": "^15.0.0",
    "react-native-vector-icons": "^10.3.0",
    "vosk-browser": "^0.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "syncpack": {
    "versionGroups": [
      {
        "label": "React versions must be consistent across web apps",
        "packages": [
          "bayit-plus-web",
          "bayit-plus-partner-portal"
        ],
        "dependencies": [
          "react",
          "react-dom"
        ],
        "pinVersion": "^18.3.1"
      },
      {
        "label": "Zustand version must be consistent",
        "dependencies": [
          "zustand"
        ],
        "pinVersion": "^5.0.0"
      },
      {
        "label": "TanStack Query version must be consistent",
        "dependencies": [
          "@tanstack/react-query"
        ],
        "pinVersion": "^5.62.0"
      }
    ]
  },
  "packageManager": "npm@10.2.0"
}
