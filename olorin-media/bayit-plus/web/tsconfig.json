{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@bayit/shared": ["../shared/components"],
      "@bayit/shared/*": ["../shared/components/*"],
      "@bayit/shared-components": ["../shared/components"],
      "@bayit/shared-components/*": ["../shared/components/*"],
      "@bayit/shared-screens": ["../shared/screens"],
      "@bayit/shared-screens/*": ["../shared/screens/*"],
      "@bayit/shared-services": ["../shared/services"],
      "@bayit/shared-services/*": ["../shared/services/*"],
      "@bayit/shared-stores": ["../shared/stores"],
      "@bayit/shared-stores/*": ["../shared/stores/*"],
      "@bayit/shared-hooks": ["../shared/hooks"],
      "@bayit/shared-hooks/*": ["../shared/hooks/*"],
      "@bayit/shared-contexts": ["../shared/contexts"],
      "@bayit/shared-contexts/*": ["../shared/contexts/*"],
      "@bayit/shared-i18n": ["../packages/ui/shared-i18n/src"],
      "@bayit/shared-i18n/*": ["../packages/ui/shared-i18n/src/*"],
      "@bayit/shared-config": ["../shared/config"],
      "@bayit/shared-config/*": ["../shared/config/*"],
      "@bayit/shared-types": ["../shared/types"],
      "@bayit/shared-types/*": ["../shared/types/*"],
      "@bayit/shared-utils": ["../shared/utils"],
      "@bayit/shared-utils/*": ["../shared/utils/*"],
      "@bayit/shared-assets": ["../shared/assets"],
      "@bayit/shared-assets/*": ["../shared/assets/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "demo"]
}
