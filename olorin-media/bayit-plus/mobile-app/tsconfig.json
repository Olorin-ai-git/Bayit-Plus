{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@olorin/design-tokens": [
        "../packages/ui/design-tokens/src"
      ],
      "@olorin/shared-hooks": [
        "../packages/ui/shared-hooks/src"
      ],
      "@olorin/shared-i18n": [
        "../packages/ui/shared-i18n/src"
      ],
      "@olorin/shared-i18n/*": [
        "../packages/ui/shared-i18n/src/*"
      ],
      "@olorin/shared-services": [
        "../packages/ui/shared-services/src"
      ],
      "@olorin/shared-stores": [
        "../packages/ui/shared-stores/src"
      ],
      "@olorin/glass-ui": [
        "../packages/ui/glass-components/src/native"
      ],
      "@olorin/glass-ui/*": [
        "../packages/ui/glass-components/src/*"
      ],
      "@bayit/shared": [
        "../shared/components"
      ],
      "@bayit/shared/*": [
        "../shared/components/*"
      ],
      "@bayit/shared-components": [
        "../shared/components"
      ],
      "@bayit/shared-components/*": [
        "../shared/components/*"
      ],
      "@bayit/shared-screens": [
        "../shared/screens"
      ],
      "@bayit/shared-screens/*": [
        "../shared/screens/*"
      ],
      "@bayit/shared-services": [
        "../shared/services"
      ],
      "@bayit/shared-services/*": [
        "../shared/services/*"
      ],
      "@bayit/shared-stores": [
        "../shared/stores"
      ],
      "@bayit/shared-stores/*": [
        "../shared/stores/*"
      ],
      "@bayit/shared-hooks": [
        "../shared/hooks"
      ],
      "@bayit/shared-hooks/*": [
        "../shared/hooks/*"
      ],
      "@bayit/shared-contexts": [
        "../shared/contexts"
      ],
      "@bayit/shared-contexts/*": [
        "../shared/contexts/*"
      ],
      "@bayit/shared-i18n": [
        "../packages/ui/shared-i18n/src"
      ],
      "@bayit/shared-i18n/*": [
        "../packages/ui/shared-i18n/src/*"
      ],
      "@bayit/shared-config": [
        "../shared/config"
      ],
      "@bayit/shared-config/*": [
        "../shared/config/*"
      ],
      "@bayit/shared-types": [
        "../shared/types"
      ],
      "@bayit/shared-types/*": [
        "../shared/types/*"
      ],
      "@bayit/shared-utils": [
        "../shared/utils"
      ],
      "@bayit/shared-utils/*": [
        "../shared/utils/*"
      ],
      "@bayit/shared-assets": [
        "../shared/assets"
      ],
      "@bayit/shared-assets/*": [
        "../shared/assets/*"
      ],
      "@bayit/shared/components/*": [
        "../shared/components/*"
      ],
      "@bayit/shared/hooks/*": [
        "../shared/hooks/*"
      ],
      "@bayit/shared/services/*": [
        "../shared/services/*"
      ],
      "@bayit/shared/utils/*": [
        "../shared/utils/*"
      ],
      "@bayit/shared/stores/*": [
        "../shared/stores/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.js",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "src/stubs",
    "demo"
  ]
}