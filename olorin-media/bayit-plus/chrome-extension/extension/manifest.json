{
  "manifest_version": 3,
  "name": "Bayit+ Translator",
  "description": "Real-time Hebrew to English/Spanish dubbing for Israeli TV streaming sites",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "tabCapture",
    "storage",
    "offscreen",
    "identity"
  ],
  "host_permissions": [
    "https://screenil.com/*",
    "https://mako.co.il/*",
    "https://13tv.co.il/*",
    "https://api.bayit.tv/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://screenil.com/*",
        "https://mako.co.il/*",
        "https://13tv.co.il/*"
      ],
      "js": ["content/content-script.js"],
      "css": ["content/content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen/audio-worklet-processor.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.bayit.tv wss://api.bayit.tv"
  }
}
