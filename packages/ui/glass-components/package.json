{
  "name": "@olorin/glass-ui",
  "version": "1.0.0",
  "description": "Olorin.ai Glass UI Component Library - Glassmorphic components for React Native and Web",
  "license": "UNLICENSED",
  "private": true,
  "sideEffects": false,
  "main": "./dist/native/index.js",
  "module": "./dist/native/index.js",
  "types": "./dist/native/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/native/index.d.ts",
        "default": "./dist/native/index.js"
      },
      "require": {
        "types": "./dist/native/index.d.cts",
        "default": "./dist/native/index.cjs"
      }
    },
    "./native": {
      "import": {
        "types": "./dist/native/index.d.ts",
        "default": "./dist/native/index.js"
      },
      "require": {
        "types": "./dist/native/index.d.cts",
        "default": "./dist/native/index.cjs"
      }
    },
    "./web": {
      "import": {
        "types": "./dist/web/index.d.ts",
        "default": "./dist/web/index.js"
      },
      "require": {
        "types": "./dist/web/index.d.cts",
        "default": "./dist/web/index.cjs"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks/index.d.ts",
        "default": "./dist/hooks/index.js"
      },
      "require": {
        "types": "./dist/hooks/index.d.cts",
        "default": "./dist/hooks/index.cjs"
      }
    },
    "./theme": {
      "import": {
        "types": "./dist/theme/index.d.ts",
        "default": "./dist/theme/index.js"
      },
      "require": {
        "types": "./dist/theme/index.d.cts",
        "default": "./dist/theme/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@olorin/design-tokens": "*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-linear-gradient": ">=2.8.0",
    "react-native-reanimated": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-linear-gradient": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.4.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-native": "^0.76.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "react-native",
    "glass",
    "glassmorphism",
    "ui-components",
    "design-system",
    "olorin",
    "bayit-plus",
    "tv",
    "tvos",
    "android-tv"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olorin-ai/olorin-ecosystem.git",
    "directory": "packages/ui/glass-components"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
