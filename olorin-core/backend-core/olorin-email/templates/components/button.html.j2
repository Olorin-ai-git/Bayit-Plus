{# CTA Button Macro - Glassmorphism Dark Theme #}
{% macro button(url, text, variant='primary') %}
{% if variant == 'primary' %}
{% set bg_color = '#7e22ce' %}
{% set bg_gradient = 'background: linear-gradient(135deg, #4f46e5, #7c3aed);' %}
{% elif variant == 'secondary' %}
{% set bg_color = '#374151' %}
{% set bg_gradient = 'background: linear-gradient(135deg, #374151, #4b5563);' %}
{% elif variant == 'danger' %}
{% set bg_color = '#dc2626' %}
{% set bg_gradient = 'background: linear-gradient(135deg, #dc2626, #ef4444);' %}
{% elif variant == 'success' %}
{% set bg_color = '#059669' %}
{% set bg_gradient = 'background: linear-gradient(135deg, #059669, #10b981);' %}
{% else %}
{% set bg_color = '#7e22ce' %}
{% set bg_gradient = 'background: linear-gradient(135deg, #4f46e5, #7c3aed);' %}
{% endif %}
