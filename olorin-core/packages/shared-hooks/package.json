{
  "name": "@olorin/shared-hooks",
  "version": "2.0.0",
  "description": "Olorin.ai Shared React Hooks - Reusable hooks for React Native and Web",
  "license": "UNLICENSED",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@olorin/design-tokens": "2.0.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-native": "^0.76.0",
    "zustand": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.2.9",
    "@types/react-native": "^0.73.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-native": "^0.76.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0",
    "zustand": "^5.0.0"
  },
  "keywords": [
    "react",
    "react-native",
    "hooks",
    "olorin",
    "bayit-plus"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olorin-ai/olorin-ecosystem.git",
    "directory": "packages/ui/shared-hooks"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
