{
  "name": "@olorin/assets",
  "version": "2.0.0",
  "description": "Centralized asset package for Olorin ecosystem - favicons, logos, icons",
  "license": "UNLICENSED",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./constants": {
      "import": {
        "types": "./dist/constants.d.ts",
        "default": "./dist/constants.js"
      },
      "require": {
        "types": "./dist/constants.d.cts",
        "default": "./dist/constants.cjs"
      }
    },
    "./favicons/*": "./dist/favicons/*",
    "./logos/*": "./dist/logos/*",
    "./icons/*": "./dist/icons/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup && npm run copy-assets",
    "copy-assets": "mkdir -p dist/favicons dist/logos/wizard dist/icons && cp -r src/favicons/* dist/favicons/ 2>/dev/null || true && cp -r src/logos/* dist/logos/ 2>/dev/null || true && cp -r src/icons/* dist/icons/ 2>/dev/null || true",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "assets",
    "favicons",
    "logos",
    "icons",
    "olorin",
    "design-system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olorin-ai/olorin-ecosystem.git",
    "directory": "olorin-core/packages/assets"
  }
}
