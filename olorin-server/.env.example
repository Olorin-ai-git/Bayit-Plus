# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration  
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_USE_TLS=false

# API Keys (move from hardcoded values)
GAIA_API_KEY=your-gaia-api-key
OLORIN_API_KEY=your-olorin-api-key
OLORIN_APP_SECRET=your-app-secret

# Database Configuration
DATABASE_URL=sqlite:///./olorin.db

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_CALLS=60
RATE_LIMIT_PERIOD=60

# External Services
# Splunk Configuration
SPLUNK_HOST=your-splunk-host
SPLUNK_PORT=8089
SPLUNK_USERNAME=your-splunk-username
SPLUNK_PASSWORD=your-splunk-password

# SumoLogic Configuration
SUMO_LOGIC_ENDPOINT=https://api.sumologic.com
SUMO_LOGIC_ACCESS_ID=your-access-id
SUMO_LOGIC_ACCESS_KEY=your-access-key
SUMO_LOGIC_ACCESS_ID_SECRET=olorin/sumo_logic_access_id
SUMO_LOGIC_ACCESS_KEY_SECRET=olorin/sumo_logic_access_key

# Log Source Configuration
ENABLED_LOG_SOURCES=splunk,sumo_logic
PRIMARY_LOG_SOURCE=splunk

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-snowflake-account
SNOWFLAKE_USER=your-snowflake-user
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_PRIVATE_KEY=your-private-key-content
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=your-schema
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_ROLE=your-role
SNOWFLAKE_AUTHENTICATOR=snowflake

# Snowflake IDPS Secret Paths
SNOWFLAKE_ACCOUNT_SECRET=olorin/snowflake_account
SNOWFLAKE_USER_SECRET=olorin/snowflake_user
SNOWFLAKE_PASSWORD_SECRET=olorin/snowflake_password
SNOWFLAKE_PRIVATE_KEY_SECRET=olorin/snowflake_private_key

# Data Source Configuration
ENABLED_DATA_SOURCES=snowflake
PRIMARY_DATA_SOURCE=snowflake

# Firebase Configuration (Backend)
# Firebase Admin SDK service account credentials
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Local Development Secret Overrides
# These environment variables override Firebase Secrets Manager for local development
# Remove or leave empty to use Firebase Secrets Manager in production

# App secrets
OLORIN_APP_SECRET=your-local-app-secret

# Splunk secrets
OLORIN_SPLUNK_USERNAME=your-local-splunk-username
OLORIN_SPLUNK_PASSWORD=your-local-splunk-password

# SumoLogic secrets (if using SumoLogic)
OLORIN_SUMO_LOGIC_ACCESS_ID=your-local-sumo-access-id
OLORIN_SUMO_LOGIC_ACCESS_KEY=your-local-sumo-access-key

# Snowflake secrets (if using Snowflake)
OLORIN_SNOWFLAKE_ACCOUNT=your-local-snowflake-account
OLORIN_SNOWFLAKE_USER=your-local-snowflake-user
OLORIN_SNOWFLAKE_PASSWORD=your-local-snowflake-password
OLORIN_SNOWFLAKE_PRIVATE_KEY=your-local-snowflake-private-key

# LangFuse secrets (if using LangFuse)
OLORIN_LANGFUSE_PUBLIC_KEY=your-local-langfuse-public-key
OLORIN_LANGFUSE_SECRET_KEY=your-local-langfuse-secret-key

# Test secrets
OLORIN_TEST_USER_PWD=your-local-test-password