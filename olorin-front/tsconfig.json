{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["shared/*"],
      "@microservices/*": ["microservices/*"],
      "@autonomous-investigation/*": ["microservices/autonomous-investigation/*"],
      "@manual-investigation/*": ["microservices/manual-investigation/*"],
      "@agent-analytics/*": ["microservices/agent-analytics/*"],
      "@rag-intelligence/*": ["microservices/rag-intelligence/*"],
      "@visualization/*": ["microservices/visualization/*"],
      "@reporting/*": ["microservices/reporting/*"],
      "@core-ui/*": ["microservices/core-ui/*"],
      "@design-system/*": ["microservices/design-system/*"],
      "@components/*": ["shared/components/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@types/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"],
      "@services/*": ["shared/services/*"],
      "@figma/*": ["shared/figma/*"],
      "@testing/*": ["shared/testing/*"]
    },
    "types": ["@figma/plugin-typings", "@playwright/test", "jest"],
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src",
    "tests/playwright/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
