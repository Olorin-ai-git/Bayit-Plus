{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@autonomous-investigation/*": ["*"],
      "@autonomous-investigation/components/*": ["components/*"],
      "@autonomous-investigation/concepts/*": ["components/concepts/*"],
      "@autonomous-investigation/hooks/*": ["hooks/*"],
      "@autonomous-investigation/stores/*": ["stores/*"],
      "@autonomous-investigation/types/*": ["types/*"],
      "@autonomous-investigation/utils/*": ["utils/*"],
      "@autonomous-investigation/services/*": ["services/*"]
    }
  },
  "include": [
    "**/*",
    "../../../types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
