{
  "dashboard": {
    "id": null,
    "title": "Olorin Frontend Overview",
    "tags": ["olorin", "frontend", "module-federation"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"olorin-.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate per Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\"olorin-.*\"}[5m])",
            "legendFormat": "{{job}} - {{method}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time P95",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"olorin-.*\"}[5m]))",
            "legendFormat": "{{job}} P95"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\"olorin-.*\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=~\"olorin-.*\"}[5m]) * 100",
            "legendFormat": "{{job}} Error %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "browser_memory_heap_used_bytes{service=~\".*\"} / 1024 / 1024",
            "legendFormat": "{{service}} Heap Used (MB)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yAxes": [
          {
            "label": "MB",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Module Federation Load Times",
        "type": "graph",
        "targets": [
          {
            "expr": "module_federation_load_duration_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} - {{chunk_id}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Web Vitals - Core Web Vitals",
        "type": "graph",
        "targets": [
          {
            "expr": "browser_first_contentful_paint_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} FCP"
          },
          {
            "expr": "browser_largest_contentful_paint_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} LCP"
          },
          {
            "expr": "browser_first_input_delay_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} FID"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Service Startup Times",
        "type": "graph",
        "targets": [
          {
            "expr": "service_startup_duration_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} Startup"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Bundle Sizes",
        "type": "stat",
        "targets": [
          {
            "expr": "service_bundle_size_bytes{service=~\".*\"} / 1024 / 1024",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "User Interactions Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "user_interaction_response_time_seconds{service=~\".*\"}",
            "legendFormat": "{{service}} - {{action}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{job=~\"olorin-.*\"}, job)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}