{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "incremental": false,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@cvplus/core": ["../core/dist"],
      "@cvplus/core/*": ["../core/dist/*"],
      "@cvplus/analytics": ["../analytics/dist"],
      "@cvplus/analytics/*": ["../analytics/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/backend/**",
    "src/engine/**",
    "src/frontend/**",
    "src/services/**",
    "src/integration/**"
  ]
}