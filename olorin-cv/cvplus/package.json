{
  "name": "cvplus",
  "version": "1.0.0",
  "description": "CVPlus - AI-Powered CV Transformation Platform - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "functions"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "npm run build --workspace=frontend",
    "build:functions": "npm run build --workspace=functions",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "emulators:start": "firebase emulators:start",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=functions",
    "type-check": "npm run type-check --workspace=frontend && npm run type-check --workspace=functions",
    "test": "npm run test --workspace=frontend && npm run test --workspace=functions && npm run test --workspace=packages/e2e-flows",
    "clean": "npm run clean --workspaces",
    "config:workspace": "echo 'Workspace configuration updated'",
    "config:typescript": "echo 'TypeScript configuration updated'",
    "install:modules": "npm install --workspaces",
    "check:dependencies": "npm ls --workspaces",
    "build:check": "npm run type-check",
    "validate:workspace": "npm ls --workspaces --depth=0",
    "test:coverage": "npm run test -- --coverage",
    "validate:tests": "npm run test",
    "test:integration": "npm run test --workspace=packages/e2e-flows",
    "validate:system": "npm run build && npm run test"
  },
  "devDependencies": {
    "@nx/devkit": "^21.4.1",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^22.9.1",
    "firebase-tools": "^13.29.0",
    "jest": "^29.6.2",
    "madge": "^8.0.0",
    "nx": "^21.4.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Gil Klainert",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cvplus/cvplus.git"
  },
  "bugs": {
    "url": "https://github.com/cvplus/cvplus/issues"
  },
  "homepage": "https://github.com/cvplus/cvplus#readme",
  "dependencies": {
    "@types/glob": "^8.1.0",
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^11.0.3",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "yaml": "^2.3.2"
  }
}
