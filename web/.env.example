# App Mode: 'demo' or 'production'
# demo: Uses only mock data, no real API calls
# production: Uses only API data, fails fast, no mocks
VITE_APP_MODE=demo

# API (Local development uses port 8000, production uses 8080)
VITE_API_URL=http://localhost:8000/api/v1

# Stripe (public key)
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Development Login Defaults (optional - for dev convenience only)
# Leave empty in production
VITE_DEV_DEFAULT_EMAIL=
VITE_DEV_DEFAULT_PASSWORD=

# Pending Files Storage
# Hours after which pending upload files are auto-cleaned (default: 24)
VITE_PENDING_FILES_EXPIRY_HOURS=24

# ============================================
# MEDIA ASSETS
# ============================================

# Widgets Intro Video URL
# Default: /media/widgets-intro.mp4 (served from public folder)
# Production: Use CDN URL for better performance
VITE_WIDGETS_INTRO_VIDEO_URL=/media/widgets-intro.mp4

# Olorin Avatar Intro Video URL
# Default: /media/olorin-avatar-intro.mp4 (served from public folder)
# Production: Use CDN URL for better performance
VITE_OLORIN_AVATAR_INTRO_VIDEO_URL=/media/olorin-avatar-intro.mp4

# ============================================
# OBSERVABILITY & LOGGING
# ============================================

# Sentry Error Tracking (optional)
# Get DSN from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=

# Logging Configuration
VITE_LOG_LEVEL=info

# ============================================
# LIVE DUBBING FEATURE
# ============================================

# Audio context sample rate for high-quality playback (Hz)
# Default: 48000 (48kHz - standard for high quality audio)
VITE_DUBBING_CONTEXT_SAMPLE_RATE=48000

# Target sample rate for server (Hz) - must be 16000 for STT
# Default: 16000 (16kHz - required by ElevenLabs Scribe)
VITE_DUBBING_SERVER_SAMPLE_RATE=16000

# Default sync delay for video synchronization (ms)
# Default: 600 (accounts for STT + Translation + TTS latency)
VITE_DUBBING_SYNC_DELAY_MS=600

# Default original audio volume (0-1, 0 = muted by default for dubbing)
VITE_DUBBING_ORIGINAL_VOLUME=0

# Default dubbed audio volume (0-1, 1 = full volume)
VITE_DUBBING_DUBBED_VOLUME=1

# Volume transition time (seconds) for smooth fades
VITE_DUBBING_VOLUME_TRANSITION=0.1

# Log interval for chunk statistics
VITE_DUBBING_CHUNK_LOG_INTERVAL=100

# AudioWorklet Processor Configuration
# Buffer size for audio capture (samples, must be 128-16384)
VITE_DUBBING_BUFFER_SIZE=2048

# Silence detection threshold (0-1, ~-60dB)
VITE_DUBBING_SILENCE_THRESHOLD=0.001

# Silence warning threshold (chunks, ~4 seconds at 2048 buffer)
VITE_DUBBING_SILENCE_WARNING_THRESHOLD=100
