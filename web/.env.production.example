# Production Configuration for Bayit+
# This file is used when building for production deployment

# App Mode: 'production' (uses real API, no mocks)
VITE_APP_MODE=production

# API URL - Use relative path to leverage Firebase Hosting rewrites
# Firebase will proxy /api/** to the backend Cloud Run service
VITE_API_URL=/api/v1

# Stripe (production public key)
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# Development Login Defaults (MUST be empty in production)
VITE_DEV_DEFAULT_EMAIL=
VITE_DEV_DEFAULT_PASSWORD=

# Pending Files Storage
VITE_PENDING_FILES_EXPIRY_HOURS=24

# ============================================
# MEDIA ASSETS (CDN)
# ============================================

# Use CDN for better performance in production
VITE_WIDGETS_INTRO_VIDEO_URL=https://cdn.bayit.tv/media/widgets-intro.mp4
VITE_OLORIN_AVATAR_INTRO_VIDEO_URL=https://cdn.bayit.tv/media/olorin-avatar-intro.mp4

# ============================================
# OBSERVABILITY & LOGGING
# ============================================

# Sentry Error Tracking (production)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=

# Production logging (INFO level)
VITE_LOG_LEVEL=info

# ============================================
# LIVE DUBBING FEATURE
# ============================================

VITE_DUBBING_CONTEXT_SAMPLE_RATE=48000
VITE_DUBBING_SERVER_SAMPLE_RATE=16000
VITE_DUBBING_SYNC_DELAY_MS=600
VITE_DUBBING_ORIGINAL_VOLUME=0
VITE_DUBBING_DUBBED_VOLUME=1
VITE_DUBBING_VOLUME_TRANSITION=0.1
VITE_DUBBING_CHUNK_LOG_INTERVAL=100
VITE_DUBBING_BUFFER_SIZE=2048
VITE_DUBBING_SILENCE_THRESHOLD=0.001
VITE_DUBBING_SILENCE_WARNING_THRESHOLD=100

# ============================================
# CASTING (AirPlay & Chromecast)
# ============================================

VITE_CAST_ENABLE_AIRPLAY=true
VITE_CAST_ENABLE_CHROMECAST=true
VITE_CHROMECAST_RECEIVER_APP_ID=F79FF160
VITE_CAST_SYNC_INTERVAL_MS=1000
VITE_CAST_AUTO_SYNC=true
VITE_CAST_SDK_URL=https://www.gstatic.com/cv/js/sender/v1/cast_sender.js
