{
  "name": "olorin-web-portals",
  "version": "1.0.0",
  "description": "Web portals for Olorin.ai - Multi-subdomain agentic AI solutions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.0",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^7.0.1",
    "@olorin/shared-i18n": "file:../olorin-core/packages/shared-i18n",
    "lucide-react": "^0.263.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.3",
    "web-vitals": "^3.0.0"
  },
  "scripts": {
    "build": "npm run build:shared && npm run build:portals",
    "build:shared": "npm run build -w packages/shared",
    "build:portals": "npm run build:main && npm run build:fraud && npm run build:streaming && npm run build:radio && npm run build:omen && npm run build:station && npm run build:cvplus",
    "build:all": "npm run build --workspaces",
    "build:main": "npm run build -w packages/portal-main",
    "build:fraud": "npm run build -w packages/portal-fraud",
    "build:streaming": "npm run build -w packages/portal-streaming",
    "build:radio": "npm run build -w packages/portal-radio",
    "build:omen": "npm run build -w packages/portal-omen",
    "build:station": "npm run build -w packages/portal-station",
    "build:cvplus": "npm run build -w packages/portal-cvplus",
    "prebuild:portals": "npm run build:shared",
    "clean": "npm run clean --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "verify": "npm run typecheck && npm run build",
    "dev:main": "npm run start -w packages/portal-main",
    "dev:fraud": "npm run start -w packages/portal-fraud",
    "dev:streaming": "npm run start -w packages/portal-streaming",
    "dev:radio": "npm run start -w packages/portal-radio",
    "dev:omen": "npm run start -w packages/portal-omen",
    "dev:station": "npm run start -w packages/portal-station",
    "dev:cvplus": "npm run start -w packages/portal-cvplus",
    "test:all": "npm run test --workspaces",
    "release": "./scripts/release.sh",
    "release:win": "bash ./scripts/release.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0"
  }
}
