{
  "name": "@olorin/shared",
  "version": "1.0.0",
  "description": "Shared components, styles, and utilities for Olorin portals",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:copy-assets",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:copy-assets": "mkdir -p dist/i18n/locales && mkdir -p dist/styles && cp -r src/styles/* dist/styles/ 2>/dev/null || true",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "i18next": "^25.8.0",
    "react-i18next": "^16.5.3",
    "i18next-browser-languagedetector": "^7.0.1",
    "lucide-react": "^0.263.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  }
}
